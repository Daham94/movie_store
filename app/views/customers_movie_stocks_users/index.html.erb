<h1>Rentals</h1>

<table>
  <thead>
    <tr>
      <th>Rental ID</th>
      <th>Video</th>
      <th>Media Type</th>
      <th>Price</th>
      <th>Late Fee</th>
      <th>Discount</th>
      <th>Rented Date</th>
      <th>Returned Date</th>
      <th>Customer</th>
      <th>Movie Stock</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers_movie_stocks_users.each do |customer_movie_stock_user| %>

        <tr>
          <td><%= customer_movie_stock_user.id %></td>
          <td><%= customer_movie_stock_user.movie_stock.inventory.video.title %></td>
          <td><%= customer_movie_stock_user.movie_stock.inventory.media_type.name %></td>
          <td><%= customer_movie_stock_user.price %></td>
          <td><%= customer_movie_stock_user.late_fee %></td>
          <td><%= customer_movie_stock_user.discount %></td>
          <td><%= customer_movie_stock_user.rented_date %></td>
          <td><%= customer_movie_stock_user.returned_date %></td>
          <td><%= customer_movie_stock_user.customer.name %></td>
          <td><%= customer_movie_stock_user.movie_stock_id %></td>
          <td><%= customer_movie_stock_user.user.name %></td>
          <td><%= link_to 'Show', customers_movie_stocks_users_path %></td>
          <td><%= link_to 'Edit', edit_customers_movie_stocks_user_path(customer_movie_stock_user) %></td>
        </tr>

    <% end %>
