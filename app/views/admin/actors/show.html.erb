<h1>Show Actor</h1>

<p>
  <strong>ID:</strong>
  <%= @actor.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @actor.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @actor.age %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @actor.actor_gender.gender %>
</p>

<p>
  <strong>Country:</strong>
  <%= @actor.actor_country.name %>
</p>

<p>
  <%= link_to "Edit", edit_admin_actor_path(@actor) %> |
  <%= link_to "Destroy", [:admin, @actor], :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", admin_actors_path %>
</p>
