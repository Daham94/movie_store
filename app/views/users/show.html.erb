<div class="row">

			<aside class="col-md-4">
				<h2>Actors' Info</h2>
				<section class="actor_form">
					<%= render 'shared/actor_form' %>
				</section>
				<section class="actor_info">

				</section>
			</aside>

				<div class="col-md-6 col-md-offset-3" id="add-video">
					<h1>Add Videos</h1>
			    <%= form_with(model: @video, local: true) do |f| %>


			      <%= f.label :title, "Title:" %><br>
			      <%= f.text_field :title, class: 'form-control' %>

			      <%= f.label :description, "Description:" %><br>
			      <%= f.text_area :description, class: 'form-control' %>

						<%= f.label :content_rating, "Content Rating:" %>

			      <%= f.label :release_date, "Released Date:" %><br>
			      <%= f.date_field :release_date, class: 'form-control' %>

			      <%= f.label :rating, "Rating:" %>
			      <%= f.text_field :rating, class: 'form-control' %>

			      <%= f.label :content_rating, "Content Rating:" %>


						<%= f.label :thumbnail, "Thumbnail:" %>
						<%= f.file_field :thumbnail, class: 'form-control' %>

			      <%= f.submit "Create my account", class: "btn btn-primary" %>
			    <% end %>
			  </div>

	</div>
