<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <aside class="col-md-4">
    <h2>Add More User Levels</h2>
    <section class="user_level_form">
      <%= render 'shared/user_level_form' %>
    </section>
    <section class="actor_info">

    </section>
  </aside>

  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :name, "Name:" %><br>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "Email:" %><br>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "New Password" %><br>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirm Password:" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :user_level, "Signup as:" %>
      <%= f.collection_select :user_level_id, UserLevel.all, :id, :level, class: 'form-control' %><br>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
