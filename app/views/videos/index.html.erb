<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
    <tr>
      <th>Video ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Thumbnail</th>
      <th>Release date</th>
      <th>Content Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.id %></td>
        <td><%= video.title %></td>
        <td><%= video.description %></td>
        <td><%= video.thumbnail %></td>
        <td><%= video.release_date %></td>
        <td><%= video.content_rating.name %></td>
        <td><%= link_to 'Show', video %></td>
        <td><%= link_to 'Edit', edit_video_path(video) %></td>
        <% if log_in_as_super_user? || log_in_as_admin_user? %>
          <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

