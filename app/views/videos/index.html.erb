<div class="row">
  <% @videos.each do |video| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag video.thumbnail.url(:medium), class: 'thumbnail'), video %>
        <% if log_in_as_super_user? || log_in_as_admin_user? %>
          <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </div>

    </div>
  <% end %>
</div>
