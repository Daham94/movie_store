<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "MovieStore", admin_root_path, id: "logo" %>
    <nav>
      <%= form_tag admin_videos_path, method: :get, class: "navbar-form navbar-left", role: "search" do %>
        <p>
          <%= search_field_tag :search, @search_term, class: "form-control", id: "search-field" %>
          <%= button_tag "Search", name: nil, class: "btn btn-default", id: "search" %>
        </p>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",admin_root_path %></li>
        <li><%= link_to "Help",help_path %></li>
        <% if !current_user.nil? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Videos<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Actors", new_admin_actor_path %></li>
              <li><%= link_to "Actor Genders", new_admin_actor_gender_path %></li>
              <li><%= link_to "Actor Countries", new_admin_actor_country_path %></li>
              <li><%= link_to "Content Rating", new_admin_content_rating_path %></li>
              <li><%= link_to "Genres", new_admin_genre_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "New Video", new_admin_video_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% if log_in_as_super_user? || log_in_as_admin_user? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Users<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "User Levels", admin_user_levels_path%></li>
              <li class="divider"></li>
              <li>
                <%= link_to "New User", signup_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", admin_user_path(current_user) %></li>
              <li><%= link_to "Inventories", admin_inventories_path %></li>
              <li><%= link_to "Movie Stocks", admin_movie_stocks_path %></li>
              <li><%= link_to "Rentals", admin_customers_movie_stocks_users_path %></li>
              <li><%= link_to "Customers", admin_customers_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", admin_logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "Login", admin_root_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
</header>
